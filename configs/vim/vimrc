source $my_vim/modules/settings.vim " (Vundle, Vim-Plug)
source $my_vim/modules/keyboard.vim
source $my_vim/modules/plugins.vim

"-----------------------------------------
" CODING ---------------------------------
"-----------------------------------------
let g:c_files = ["hpp", "h", "cpp", "c", "cxx", "cc"]
let g:f_type = &filetype

if g:f_type ==# 'go'
  source $my_vim/modules/coding/go.vim
endif

if g:f_type ==# 'js' || g:f_type ==# 'vue' 
  source $my_vim/modules/coding/js.vim
endif

if index(g:c_files, g:f_type) >= 0
  source $my_vim/modules/coding/cscope.vim
endif
